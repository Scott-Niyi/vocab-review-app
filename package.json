{
  "name": "vocab-review-app",
  "version": "1.0.0",
  "description": "Intelligent vocabulary review system with spaced repetition",
  "main": "dist-electron/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "tsc && vite build && tsc -p tsconfig.node.json && electron-builder",
    "build:mac": "tsc && vite build && tsc -p tsconfig.node.json && electron-builder --mac",
    "build:win": "tsc && vite build && tsc -p tsconfig.node.json && electron-builder --win",
    "build:all": "tsc && vite build && tsc -p tsconfig.node.json && electron-builder --mac --win",
    "build:vite": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.node.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:algorithm": "vitest --config vitest.algorithm.config.ts",
    "setup": "npm install && npm run build:electron",
    "reopen": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "clean": "rm -rf dist-electron dist node_modules",
    "clean:cache": "rm -rf node_modules/.vite"
  },
  "keywords": [
    "vocabulary",
    "learning",
    "spaced-repetition",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.vocabreview.app",
    "productName": "Vocab Review",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-react/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.education",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "identity": null
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "default",
        "to": "default",
        "filter": ["**/*"]
      }
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "fast-check": "^4.5.3",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.11",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
